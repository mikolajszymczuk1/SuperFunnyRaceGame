{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/phaser/types"
    ],
    "baseUrl": "./src",
    "sourceMap": true,
    "types": [
      "phaser"
    ]
  },
  "files": ["./main.ts"],
  "include": ["./src/**/*", "./src/tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
